extends _partial/layout.pug

block title
	title
		= __("tags")
		- if (page.tag) {
			|: #{page.tag}
		- }

block content
	.container
		.post-list.category-details
			- site.tags.forEach(function(tag){
				.content-title
					h2
						a(href=url_for(tag.path))
							= tag.name
				- for (let i = 0; i<tag.posts.data.length; i++) {
				-	let item = tag.posts.data[i]
					.post-item(title=item.title)
						.time-m-d!= item.date.format("MM-DD")
						.title
							a(href=url_for(item.path))
								- if(item.title !== "") { 
								span!= item.title
								- } else { 
								span untitled
								- } 
				- }
			- })

